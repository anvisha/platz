<div class="upcoming-events">
  <h1><%= params.key?(:event) ? "Past Events" : "Upcoming Events" %></h1>

  <% if params[:event] %>
    <%= form_tag url_for, :method => :get do %>
      <%= date_select :event, :end_date, :start_year => 2009, :discard_day => true %>
      <%= hidden_field :event, :search %>
      <%= submit_tag %>
    <% end %>       
  <% end %>

</div>
<h3>Events</h3>
<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Address
    </th>
    <th>
      Date
    </th>
  </tr>
<% @events.each do |event| %>
  <tr>
    <td>
      <%= link_to event.name, event %>
    </td>
    <td>
      <%= event.location %>
    </td>
    <td>
      <%= event.occurs_at.try(:strftime, "%B %d, %l:%M %p") %>
    </td>
  </tr>
<% end %>
</table>